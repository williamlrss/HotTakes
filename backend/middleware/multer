
'use strict'; // Enable strict mode to enforce cleaner code and catch common errors.

const multer = require('multer');

const MIME_TYPE_MAP = {
  'image/jpg': 'jpg', // Mapping for JPG image type.
  'image/jpeg': 'jpg', // Mapping for JPEG image type.
  'image/png': 'png', // Mapping for PNG image type.
};

/**

Set up the storage configuration for multer.
@param {Object} req - The request object.
@param {Object} file - The file object.
@param {Function} callback - The callback function.
@returns {void}
*/
const storage = multer.diskStorage({
  destination: (req, file, callback) => {
    callback(null, 'images'); // Set the destination folder for storing images.
  },
  filename: (req, file, callback) => {
    const name = file.originalname.split(' ').join(''); // Replace spaces in the original filename with underscores.
    const extension = MIME_TYPE_MAP[file.mimetype]; // Get the file extension based on the MIME type.
    callback(null, name + '' + Date.now() + '.' + extension); // Set the filename with a timestamp and the file extension.
  },
});
/**

Export the multer middleware with single-file upload configuration.
@param {string} fieldname - The name of the field used for the single file upload.
@returns {Object} - The multer middleware for single-file upload.
*/
module.exports = multer({ storage }).single('image'); // Export the multer middleware for handling single-file uploads.